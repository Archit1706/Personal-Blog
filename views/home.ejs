<%- include("partials/header") -%>


<h1>Home</h1>

<p> <%= homeContent %> </p>

<% for(let i = 0; i < posts.length; i++) { %>

    <% const postRoute = "/posts/" + posts[i].title.trim().replace(/\s+/g, '-') %>

    <h1><%= posts[i].title %></h1>
    <% if (posts[i].body.length > 100) { %>
        <p><%= posts[i].body.substring(0, 100) + "..." %></p>
    <% } else { %>
        <p><%= posts[i].body %></p>
    <% } %>
    <a href=<%= postRoute %> >Read More</a>
<% } %>


<%- include("partials/footer") -%>