<%- include("partials/header") -%>


    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="postTitle" placeholder="Post Title" id="" autofocus autocomplete="off">

            <label for="post">Post</label>
            <textarea class="form-control" id="" name="postBody" rows="4" cols="50" placeholder="Post Content" autocomplete="off"></textarea>
        </div>
            <button class="btn btn-primary" type="submit" name="submit">Publish</button>


    </form>


    <%- include("partials/footer") -%>